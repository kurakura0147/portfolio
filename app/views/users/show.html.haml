= render 'shared/header'

.main-content
  .main-content__left
    .main-content__left--user
      .i.fas.fa-user-circle
      = "#{@article_user.nickname}さんの投稿一覧"
    - @contents.each do |content|
      =link_to  content_path(content) ,class: "main-content__left--article" do
        = render partial: 'shared/article', locals: { content: content}

  .main-content__right
    .main-content__right--ranking
      = "#{@article_user.nickname}さんの記事"
      %br
      .i.fas.fa-chess-king
      ="いいねRANKING"
      .i.fas.fa-chess-king
      %br
    = render partial: 'shared/ranking-article'

.main-content__page
  = paginate @contents
= render 'shared/footer'
