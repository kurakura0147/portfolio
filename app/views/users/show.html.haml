= render 'shared/header'

.main-content
  .main-content__left
    = "#{@article_user.nickname}さんの投稿一覧"
    - @contents.each do |content|
      =link_to  content_path(content) ,class: "main-content__left--article" do
        = image_tag content.image , class: "article__image"
        .article__list
          .article__title
            .i.far.fa-clipboard
            = content.name
          .article__text
            tag :
            = content.tag_list
          %object
            .article__iine{:id => "likes_buttons_#{content.id}"}
              = render partial: 'shared/like', locals: { content: content, likes: @likes}
          .article__time
            = "投稿者 : #{content.user.nickname}"
            %br
            .i.far.fa-clock
            = content.created_at.strftime("%Y/%m/%d %H:%M")

  .main-content__right
    = "#{@article_user.nickname}さんの記事"
    %br
    .i.fas.fa-chess-king
    ="いいねRANKING"
    .i.fas.fa-chess-king
    %br
    - i = 1
    - @ranking_contents.first(5).each do |content|
      = i
      - i += 1
      .favorite__list
        .favorite__list--image
          = image_tag content.image
        .favorite__list--name
          = content.name

= render 'shared/footer'
