= render 'shared/header'

.main-content
  .main-content__left
    .main-content__left--search
      = "該当 #{@count} 件 ( ' #{params[:search]} ' による検索 )"
    - @contents.each do |content|
      =link_to  content_path(content) ,class: "main-content__left--article" do
        = render partial: 'shared/article', locals: { content: content}

  .main-content__right
    Favorite article

.main-content__page
  = paginate @contents
= render 'shared/footer'
